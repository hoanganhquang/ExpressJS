<h1>My courses</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Des</th>

        </tr>
    </thead>
    <tbody>
        {{#each re}}
        <tr>
            <td scope="col">{{sum @index 1}}</td>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>
                <button type="button" class="btn btn-dark"><a href="/courses/{{this._id}}/edit">Edit</a></button>
                <button type="button" class="btn btn-dark"><a href="">Delete</a></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>